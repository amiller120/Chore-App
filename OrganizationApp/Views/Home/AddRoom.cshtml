@model PagedResult<Room>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Add Room Page";
}

<div class="row">
    <div class="col-md-6">
        <table id="addRoomTable" class="cell-border compact stripe">
            <thead>
                <tr>
                    <td>Name</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var room in Model.Results)
                {
                    <tr>
                        <td>@room.Name</td>
                    </tr>
                }

            </tbody>
        </table>
        @(await Component.InvokeAsync("Pager", Model))
    </div>
    <div class="col-md-6">
        @await Component.InvokeAsync("AddRoom")
    </div>
</div>
@section Scripts {

    <script>
        $(document).ready(function () {
            $("#addRoomTable").DataTable({
                "paging": false,
                "bInfo": false
            });
        });
    </script>
}
