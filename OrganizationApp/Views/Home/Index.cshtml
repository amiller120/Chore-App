@model IEnumerable<ChoreItem>
@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col-md-6">
        <table id="choreTable">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Assignee</td>
                    <td>Is Complete?</td>
                    <td>Details</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var chore in Model)
                {
                <tr>
                    <td>@chore.Name</td>
                    @if (chore.AssignedTo != null)
                    {
                        <td>@chore.AssignedTo.Name</td>
                    }
                    else
                    {
                        <td>No one has been assigned this task</td>
                    }

                    <td>@chore.IsComplete</td>
                    <td><a class="btn btn-primary" asp-action="Details" asp-controller="Home" asp-route-id="@chore.Id">Details</a></td>
                </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        @await Component.InvokeAsync("AddChore")
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#choreTable").DataTable();
        });
    </script>
}
