@model PagedResult<ChoreItem>
@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col-md-6">
        <table id="choreTable">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Assignee</td>
                    <td>Is Complete?</td>
                    <td>Details</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var chore in Model.Results)
                {
                    <tr>
                        <td>@chore.Name</td>
                        @if (chore.AssignedTo != null)
                        {
                            <td>@chore.AssignedTo.Name</td>
                        }
                        else
                        {
                            <td>No one has been assigned this task</td>
                        }

                        <td>@chore.IsComplete</td>
                        <td><a class="btn btn-primary" asp-action="Details" asp-controller="Home" asp-route-id="@chore.Id">Details</a></td>
                    </tr>
                }

            </tbody>
        </table>
        @for (var p = 1; p <= Model.PageCount; p++)
        {
            <a href="@Url.Action("Index", new { page = p })" class="btn btn-secondary">@p</a>
        }
    </div>
    <div class="col-md-6">
        @await Component.InvokeAsync("AddChore")
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#choreTable").DataTable({
                "paging": false
            });
        });
    </script>
}
