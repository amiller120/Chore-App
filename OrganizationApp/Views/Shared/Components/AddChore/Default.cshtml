@{
}

<div class="card">
    <div class="card-header">Add Chore</div>
    <div class="card-body" id="chore-form">


        <form id="choreForm" asp-action="AddChore" asp-controller="Home" method="post">
            <div class="form-group">
                <label>Name</label><br />
                <input asp-for="Chore.Name" value="" />
            </div>
            <div class="form-group">
                <label>Assigned To</label><br />

                <select asp-for="Chore.AssignedTo.Id" form="choreForm">
                    @foreach (var item in Model.ListOfChoices)
                    {
                        <option value="@item.Id" >@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Rooms</label>
                <select asp-for="Chore.Room.Id" form="choreForm">
                    @foreach (var item in Model.ListOfRooms)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>

            <button type="submit" class="btn btn-secondary">Submit</button>

        </form>
    </div>
</div>